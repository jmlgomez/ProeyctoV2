   <context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/Spring/applicationContext.xml</param-value>
	</context-param>
	
	<context-param>
		<param-name>javax.faces.DEFAULT_SUFFIX</param-name>
