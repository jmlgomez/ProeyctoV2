<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow.xsd">
        
<!-- ******************************************************************************************************** -->
	<!-- PARA LISTAR /BORRAR -->
	
	<view-state id="ListadoDispositivos" >
		<var name="dispositivos" class="com.ayto.proyecto.modelo.Dispositivos"/>
		<on-entry>
			<set name="flowScope.dispositivos" value="serviceDispositivosImpl.listadoDispositivos()"></set>
			
		</on-entry>
		<transition on="nuevodisp" to="AltaDispositivos"></transition>
		<transition on="modificar" to="EditarDispositivos">
		<set name="flowScope.dispositivos" value="dispositivos" />
		</transition>
		<transition on="borrar" to="ListadoDispositivos">
		<evaluate expression="serviceDispositivosImpl.borrarDispositivos(dispositivos)"></evaluate> 
		</transition>
	</view-state>
	
<!-- ******************************************************************************************************** -->
	<!-- PARA DAR DE ALTA -->
	<view-state id="AltaDispositivos" >
		<on-entry>
			<set name="flowScope.dispositivos" value="new com.ayto.proyecto.modelo.Dispositivos()"></set>
		</on-entry>
		
		<transition on="cancelar" to="ListadoDispositivos"></transition>
		<transition on="guardar" to="ListadoDispositivos">
			 <evaluate expression="serviceDispositivosImpl.insertarDispositivos(dispositivos)"></evaluate> 
		</transition>
	</view-state>
	
<!-- ******************************************************************************************************** -->
	<!-- PARA EDITAR-->
	<view-state id="EditarDispositivos" >
		
		<transition on="cancelar" to="ListadoDispositivos"></transition>
		<transition on="guardar" to="ListadoDispositivos">
			 <evaluate expression="serviceDispositivosImpl.modificarDispositivos(dispositivos)"></evaluate> 
		</transition>
	</view-state>
	
</flow>